   <br><br>
   <input type = "submit" value="Aceptar"/>
</form>

//PHP

<?php

       $numero =  $numero = $_GET['numero'] ;
       $i = 10;
       for (; ; ) {
           if ($i > $numero) {
               break;
           }
           echo $i;
           $i++;
       }
 ?>
 
 - Exercici 5
 
 //HTML
 
 <form method='GET' action="numero.php">
    Nombre completo del estudiante: 
    <input type="text" name="nombre" size="10">
    <br><br>    
   Nota 1 del estudiante: 
   <input type="number" name="nota1" size="10">
   <br><br>
   Nota 2 del estudiante: 
   <input type="number" name="nota2" size="10">
   <br><br>
   Nota 3 del estudiante: 
   <input type="number" name="nota3" size="10">
   <br><br>
   <input type = "submit" value="Aceptar"/>
</form>

//PHP

<?php
       $nombre = $_GET['nombre'] ;
       $nota1 =  $_GET['nota1'] ;
       $nota2 =  $_GET['nota2'] ;
       $nota3 =  $_GET['nota3'] ;  

       $promedio = ($nota1 + $nota2 + $nota3); 

       if (( $promedio >= 60)) {	
        echo "Primera Divisió";
		
	    } elseif(( $promedio > 0 &&  $promedio < 33) ) {
        echo "Reprovat";		
			
        } elseif(( $promedio > 32 &&  $promedio < 44) ) {
        echo "Tercera Divisió";
		
         } elseif(( $promedio > 45 && $promedio < 59) ) {
         echo "Segona Divisió";

        }

 ?>
 
